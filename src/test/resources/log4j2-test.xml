<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[TEST] %d{HH:mm:ss.SSS} %-5level %c{1} - %msg%n"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Din actions-logger: skickas ENBART till konsolen i tester -->
        <Logger name="actionlog" level="info" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Allt annat i tester: syns ocksÃ¥ i konsolen -->
        <Root level="info">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>
